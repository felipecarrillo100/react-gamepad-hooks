{
  "name": "react-gamepad-hooks",
  "description": "React hooks for detecting and handling gamepads and joysticks (PlayStation, Xbox, etc).",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build:ts": "tsc -p tsconfig.json",
    "build:scss": "sass src:dist --no-source-map",
    "copy:scss": "cpx \"src/**/*.scss\" dist/",
    "build": "npm run build:ts && npm run build:scss && npm run copy:scss"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/react": "^19.1.16",
    "cpx": "^1.5.0",
    "sass": "^1.93.2",
    "typescript": "^5.6.0"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/felipecarrillo100/react-gamepad-hooks.git"
  },
  "keywords": ["react", "gamepad", "joystick", "hooks", "controller", "xbox", "playstation"],
  "license": "MIT"
}
